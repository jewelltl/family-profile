doctype html
html(lang="en")
	head
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible",content="IE=edge")
		meta(name="viewport",content="width=device-width,initial-scale=1")
		
		title(Family Profile Administration)

		//- Global Styleseets
		link(href="https://fonts.googleapis.com/css?family=Roboto:400,300,100,500,700,900",rel="stylesheet",type="text/css")
		link(href="/plugins/font-awesome/css/font-awesome.min.css",rel="stylesheet",type="text/css")
		link(href="/plugins/simple-line-icons/simple-line-icons.min.css",rel="stylesheet",type="text/css")
		link(href="/plugins/bootstrap/css/bootstrap.min.css",rel="stylesheet",type="text/css")
		link(href="/plugins/uniform/css/uniform.default.css",rel="stylesheet",type="text/css")
		link(rel='stylesheet' href='/plugins/gritter/css/jquery.gritter.css')

		block styles
		
		link(href="/css/components-rounded.css",rel="stylesheet",type="text/css")
		link(href="/css/plugins.css",rel="stylesheet",type="text/css")
		link(href="/css/admin/layout.css",rel="stylesheet",type="text/css")
		link(href="/css/admin/themes/grey.css",rel="stylesheet",type="text/css")
		link(href="/css/admin/custom.css",rel="stylesheet",type="text/css")
		
	body.page-boxed.page-header-fixed.page-container-bg-solic.page-sidebar-closed-hide-logo
		.page-header.navbar.navbar-fixed-top
			.page-header-inner.container
				.page-logo
					a(href="/admin")
						img.logo-default(src="/images/logo-small.gif" alt="logo")
					.menu-toggler.sidebar-toggler
				a.menu-toggler.responsive-toggler(href="javascript:;" data-toggle="collapse" data-target=".navbar-collapse")

				.page-top
					.top-menu
						ul.nav.navbar-nav.pull-right
							li.dropdown.dropdown-user
								a.dropdown-toggle(href="javascript:;" data-toggle="dropdown" data-hover="dropdown" data-close-others="true")
									img.img-circle(src="/images/avatar.png")
									span.username.username-hide-on-mobile
									i.fa.fa-angle-down
								ul.dropdown-menu.dropdown-menu-default
									li
										a(href="/admin/logout")
											i.icon-key 
											span.pull-right Logout

		.clearfix

		.container
			.page-container
				.page-sidebar-wrapper
					include sidebar.pug
				.page-content-wrapper
					.page-content
						block page_header
						
						block page_content
			.page-footer
				.page-footer-inner 2014 &copy; Copyright
				.scroll-to-top
					i.icon-arrow-up

		
	
		//- Core JS files
		script(type="text/javascript",src="/plugins/jquery.min.js")
		script(type="text/javascript",src="/plugins/jquery-migrate.min.js")
		script(type="text/javascript",src="/plugins/jquery-ui/jquery-ui.min.js")
		script(type="text/javascript",src="/plugins/bootstrap/js/bootstrap.min.js")
		script(type="text/javascript",src="/plugins/bootstrap-hover-dropdown/bootstrap-hover-dropdown.min.js")
			
		script(type="text/javascript",src="/plugins/jquery.blockui.min.js")
		script(type="text/javascript",src="/plugins/jquery.cokie.min.js")
		script(type="text/javascript",src="/plugins/uniform/jquery.uniform.min.js")
		script(type="text/javascript",src='/plugins/gritter/js/jquery.gritter.js')

		block scripts

		script(type="text/javascript",src="/scripts/metronic.js")
		script(type="text/javascript",src="/scripts/admin/layout.js")
		script(type="text/javascript",src="/scripts/demo.js")
		

		script.
			$(document).ready(function(){
				Metronic.init()
				Layout.init()
				Demo.init()
			})
			